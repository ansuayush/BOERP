
@{
    ViewBag.Title = "ViewVendor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input type="hidden" id="hdnVendorId" value="@ViewBag.VendorId" />
<input type="hidden" id="hdnPAId" value="@ViewBag.PAId" />
<input type="hidden" id="hdnPageStatus" value="@ViewBag.PageStatus" />

<div class="pagetitle gap-bottom d-flex justify-content-between">
    <h1 class="m-0 d-flex align-items-center">
        <a href="/BusinessPartner/Vendor?auth=@ViewBag.Auth"><img src="~/assets/images/icons/help/back-icon.png" class="headingicon"></a>Vendor Details<div class="ml-3"></div>
    </h1>
    <div class="align-self-center">
        <div class="d-flex justify-content-between align-items-center gap-16">
            <a href="CreateVendor?auth=@ViewBag.Auth&id=@ViewBag.VendorId&status=@ViewBag.PartyStatus" class="btn mr-2 actionbtn border-r-8"><img src="~/assets/images/icons/help/edit-white-icon.png" class="btn-icon">Edit</a>

        </div>
    </div>
</div>
<ul class="tablink">
	<li><a href="/BusinessPartner/ViewVendor?auth=@ViewBag.Auth&id=@ViewBag.VendorId&PAId=@ViewBag.PAId" class="nav-link active">Vendor Details</a></li>
	@if(ViewBag.PAId>0)
    {
        <li class="vendorverified-tab"><a href="/BusinessPartner/VendorItems?auth=@ViewBag.Auth&id=@ViewBag.VendorId&PAId=@ViewBag.PAId" class="nav-link">Vendor Items</a></li>
	    <li class="vendorverified-tab"><a href="/BusinessPartner/PurchaseOrders?auth=@ViewBag.Auth&id=@ViewBag.VendorId&PAId=@ViewBag.PAId" class="nav-link ">Purchase Orders</a></li>
	    <li class="vendorverified-tab"><a href="/BusinessPartner/GRN?auth=@ViewBag.Auth&id=@ViewBag.VendorId&PAId=@ViewBag.PAId" class="nav-link ">GRN</a></li>
	    <li class="vendorverified-tab"><a href="/BusinessPartner/FinancialLedgers?auth=@ViewBag.Auth&id=@ViewBag.VendorId&PAId=@ViewBag.PAId" class="nav-link ">Financial Ledgers</a></li>
	}
</ul>

<div class="row">

    <div class="col-lg-12 form-group">
        <div class="card br-none p-0  col-default-bottom h-100">
            <div class="card-header border-top-RL header-active br-none  d-flex justify-content-between ">
                <h2 class="title-two align-self-center">Vendor Information</h2>
                <div class="align-self-center"></div>
            </div>
            <div class="card-body view-form-group">
                <div class="row">

                    <div class="col-lg-2 col-md-3 col-sm-4 from-group">
                        <label>Vendor Code</label>
                        <p class="m-0" id="vendorCode"></p>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-4 from-group">
                        <label>Vendor Name</label>
                        <p class="m-0" id="vendorName"></p>
                        <span class="ml-3">@ViewBag.VendorName</span>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-4 form-group">
                        <label>Vendor Email</label>
                        <p class="m-0" id="vendorEmailId"></p>
                    </div>

                    <div class="col-lg-2 col-md-3 col-sm-4 form-group">
                        <label>Type</label>
                        <p class="m-0" id="vendorType"></p>
                    </div>

                    <div class="col-lg-2 col-md-3 col-sm-4 form-group">
                        <label>GSTIN Type</label>
                        <p class="m-0">Regular</p>
                    </div>

                    <div class="col-lg-2 col-md-3 col-sm-4 form-group">
                        <label>GSTIN</label>
                        <p class="m-0" id="gstIn"></p>
                    </div>

                    <div class="col-lg-2 col-md-3 col-sm-4 form-group">
                        <label>TAN No.</label>
                        <p class="m-0" id="tanNo"></p>
                    </div>

                    <div class="col-lg-2 col-md-3 col-sm-4 form-group">
                        <label>PAN no.</label>
                        <p class="m-0" id="panNo"></p>
                    </div>

                    <div class="col-lg-2 col-md-3 col-sm-4 form-group">
                        <label>Material Category</label>
                        <p class="m-0" id="materialcate"></p>
                    </div>

                    <div class="col-lg-2 col-md-3 col-sm-4 form-group">
                        <label>MSME</label>
                        <p class="m-0" id="MSME"></p>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="col-lg-12 form-group">
        <div class="card br-none p-0 h-100">
            <div class="card-header border-top-RL header-active br-none  d-flex justify-content-between ">
                <h2 class="title-two align-self-center">Contact Information</h2>
                <div class="align-self-center"></div>
            </div>
            <div class="card-body view-form-group">
                <div class="row" id="contactInfoContainer">
