    </div>

    @if (ViewBag.PartyStatus != 2)
    {
        <div class="col-lg-12  text-right form-group">
            <div class="d-flex justify-content-end align-items-center gap-10">
                <button id="btnReject" type="button" class="btn btn-lg btn-warning" onclick="VendorStatus(3)">Reject</button>
                <button id="btnApprove" type="button" class="btn btn-lg btn-success" onclick="VendorStatus(2)">Approve</button>
            </div>

