            <div class="modal-body mb-100">
                <!-- open -->
                <div class="row">

                    <div class="col-sm-12 form-group">
                        <label for="state" class="mb-0">Chemist Name <sup>*</sup></label>
                        <select class="form-control applyselect Mandatory" id="txtChemist" name="">
