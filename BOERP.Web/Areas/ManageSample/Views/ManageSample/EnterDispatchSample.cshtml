<footer class="footer-action-btn ">
    @*<button type="submit" class="btn  btn-lg  actionbtn">Print dispatch Label</button>*@

    @if (ViewBag.isDispatched == 1)
    {

        <button type="submit" class="btn btn-lg  cancelbtn" onclick="RedirectToDispatchedItems()">Cancel</button>
    }
    else
    {
        <button type="submit" class="btn btn-lg  cancelbtn" onclick="RedirectToDispatch()">Cancel</button>
        <button type="submit" class="btn  btn-lg  actionbtn" onclick="saveDispatch()">Submit</button>
    }
</footer>


<script>
    var Edit_ID = "@ViewBag.Edit_ID";

    var isUn = "@ViewBag.isUn";

    var isDispatched = "@ViewBag.isDispatched";
</script>
