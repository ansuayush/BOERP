
@{
    ViewBag.Title = "IndentViewApproval";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <input type="hidden" value="@ViewBag.IndentId" id="hdnIndentId" />


    <div class="pagetitle gap-bottom d-flex justify-content-between">
        <h1 class="m-0 d-flex align-items-center">
            <a href="/MaterialManagement/Material/IndentApproval?auth=@ViewBag.Auth"><img src="~/assets/images/icons/help/back-icon.png" class="headingicon"></a><span id="pIndentNumber">Indents</span>
        </h1>        
    </div>



    <div class="row">
        <div class="col-md-6 form-group">
            <div class="card br-none p-0  ">

                <div class="card-header border-top-RL header-active br-none  d-flex justify-content-between ">
                    <h2 class="title-two align-self-center">Raised By</h2>
                    <div class="align-self-center"></div>
                </div>

                <div class="card-body view-form-group">
                    <div class="row">
                        <div class="col-md-4 col-sm-6 form-group">
                            <label for="">Name</label>
                            <p id="pRaisedBy"></p>
                        </div>
                        <div class="col-md-4 col-sm-6  form-group">
                            <label for="">Department</label>
                            <p id="pRaisedDept"></p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="col-md-6 form-group">
            <div class="card br-none p-0  ">

                <div class="card-header border-top-RL header-active br-none  d-flex justify-content-between  ">
                    <h2 class="title-two align-self-center">Primary Document Details</h2>
                    <div class="align-self-center"></div>
                </div>

                <div class="card-body view-form-group">
                    <div class="row">
                        <div class="col-md-4 col-sm-6 form-group">
                            <label for="">Document Number</label>
                            <p id="txtDocNo"></p>
                        </div>

                        <div class="col-md-4 col-sm-6 form-group">
                            <label for="">Document Date</label>
                            <p id="txtDocDate"></p>
                        </div>

                    </div>
                </div>

            </div>
        </div>
        <div class="col-md-12 form-group">
            <div class="card br-none p-0  ">

                <div class="card-header border-top-RL header-active br-none  d-flex justify-content-between ">
                    <h2 class="title-two align-self-center">Item Information</h2>
                    <div class="align-self-center"></div>
                </div>

                <div class="card-body view-form-group pl-0 pr-0">
                    <div class="table-responsive sticky-responsive">
                        <table id="datatableIndent" class="display  dgntable dataTable stickyth  no-footer radius-0">
                            <thead>
                                <tr>
                                    <th width="100">Item Code</th>
                                    <th width="150">Item Name</th>
                                    <th width="150">Item Description</th>
                                    <th width="100">Quantity</th>
                                    <th width="50">Uom</th>
                                    <th width="100">Required by</th>
                                    <th  width="">Comment</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                   
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card br-none p-0 h-100">
                <div class="card-header border-top-RL header-active br-none  d-flex justify-content-between ">
                    <h2 class="title-two align-self-center">Upload Invoice<sup>*</sup></h2>
                    <div class="align-self-center"></div>
                </div>
                <div class="card-body view-form-group">
                    <div class="section-container fileuploadview  section-container-popup ">
                        <!--  -->
                        <div id="documentImages" class="document-images">

                        </div>
                        <!--  -->
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card br-none p-0 h-100">
                <div class="card-header border-top-RL header-active br-none  d-flex justify-content-between ">
                    <h2 class="title-two align-self-center">Comment</h2>
                    <div class="align-self-center"></div>
                </div>
                <div class="card-body view-form-group ">
                    <p id="txtComments"></p>
                </div>
            </div>
        </div>
        <div class="col-lg-5">
            <div class="cart-radio-button">
                <div class="cart-radio-btn">

                </div>

                <div class="d-flex justify-content-end align-items-center gap-10" >
                    <button style="display:none;" id="btnApprovalAction1"  type="button" onclick="ApporveReject(2)" class="btn btn-lg btn-warning">Reject</button>
                    <button  style="display:none;" id="btnApprovalAction2" type="button" onclick="ApporveReject(1)" class="btn btn-lg btn-success">Approve</button>
                </div>
            </div>
        </div>


    </div>



<script src="~/Areas/MaterialManagement/DevScript/ViewIApprovalndent.js"></script>

