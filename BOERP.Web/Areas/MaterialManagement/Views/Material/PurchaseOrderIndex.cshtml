<!-- createuser Modal popup -->
<div class="modal" id="addcompany">
	<div class="modal-dialog modal-dialog-centered modal-xl">
		<div class="modal-content ">

			<!-- Modal Header -->
			<div class="modal-header">
				<h4 class="modal-title text-left w-100">Add Business Partner</h4>
				<button type="button" class="close" data-dismiss="modal"><img src="~/assets/images/icons/help/close-icon.png" class="closeicon"></button>
			</div>

			<!-- Modal body -->
			<div class="modal-body">

				<div class="row">
					<div class="col-sm-12 form-group">
						<h2 class="title-two">Contact Person Information</h2>
					</div>
					<div class="col-lg-4 col-md-12 col-sm-12 form-group">
						<label for="Name">Name<sup>*</sup></label>
						<input type="text" placeholder="Enter Name" class="form-control ">
					</div>
					<div class="col-lg-4 col-md-6 col-sm-6 form-group">
						<label for="Name">Email<sup>*</sup></label>
						<input type="email" placeholder="Enter Email" class="form-control ">
					</div>
					<div class="col-lg-4 col-md-6 col-sm-6 form-group">
						<label for="Name">Phone Number<sup>*</sup></label>
						<input type="number" placeholder="Enter Phone Number" class="form-control ">
					</div>



					<div class="col-sm-12"><hr /></div>


					<div class="col-sm-12 form-group">
						<h2 class="title-two">Company Information</h2>
					</div>

					<div class="col-lg-3 col-md-12 col-sm-6 form-group ">
						<label for="role">Company Name<sup>*</sup></label>
						<input type="text" placeholder="Enter Name" class="form-control ">
					</div>

					<div class="col-lg-3 col-md-6 col-sm-6 form-group ">
						<label for="role">Company Email<sup>*</sup></label>
						<input type="text" placeholder="Enter Name" class="form-control ">
					</div>
					<div class="col-lg-3 col-md-6 col-sm-6 form-group ">
						<label for="role">Payment Terms<sup>*</sup></label>
						<input type="text" placeholder="Enter Number" class="form-control ">

					</div>

					<div class="col-lg-3 col-md-12 col-sm-6">
						<label>Type</label>
						<div class="d-flex flex-wrap gap-10">

							<input type="checkbox" id="buyertype" name="type" value="">
							<label for="buyertype"> Buyer</label>

							<input type="checkbox" id="supplietype" name="type" value="">
							<label for="supplietype"> Supplier</label>

						</div>

					</div>

					<div class="col-lg-3 col-md-12 col-sm-6 form-group ">
						<label for="role">GST Number<sup>*</sup></label>
						<input type="text" placeholder="Enter Number" class="form-control ">
						<span class="error"><img src="~/assets/images/icons/help/info-error-icon.png" alt="" class="icon-sm" /> Verify the GST number to capture all the details automatically</span>
					</div>



					<div class="col-lg-3 col-md-12 col-sm-6 form-group ">
						<label for="role">TAN Number<sup>*</sup></label>
						<input type="text" placeholder="Enter Name" class="form-control ">
					</div>

					<div class="col-lg-3 col-md-12 col-sm-6 form-group ">
						<label for="role">PAN Number<sup>*</sup></label>
						<input type="number" placeholder="Enter Name" class="form-control ">
					</div>

					<div class="col-lg-3 col-md-6 col-sm-6 form-group align-self-center">
						<button type="button" class="btn btn-lg actionbtn">Verify</button>
					</div>

					<div class="col-sm-12"><hr /></div>
					<div class="col-sm-12 form-group">
						<h2 class="title-two">Address</h2>
					</div>
					<div class="col-lg-4 col-md-6 col-sm-6 form-group">
						<label for="role">Address Line 1</label>
						<textarea class="form-control" placeholder="Address Line 1 "></textarea>
					</div>

					<div class="col-lg-4 col-md-6 col-sm-6 form-group">
						<label for="role">Address Line 2</label>
						<textarea class="form-control" placeholder="Address Line 2 "></textarea>
					</div>

					<div class="col-lg-4 col-md-6 col-sm-6 form-group">
						<label for="role">Pin code<sup>*</sup></label>
						<input type="text" placeholder="Enter Name" class="form-control " value="">
					</div>

					<div class="col-lg-4 col-md-6 col-sm-6 form-group">
						<label for="role">City<sup>*</sup></label>
						<select class="form-control applyselect" id="city" name="city">
							<option value="1">City 1</option>
							<option value="2">City 2</option>
						</select>
					</div>

					<div class="col-lg-4 col-md-6 col-sm-6 form-group">
						<label for="role">State<sup>*</sup></label>
						<select class="form-control applyselect" id="State" name="State">
							<option value="1">State 1</option>
							<option value="2">State 2</option>
						</select>

					</div>

					<div class="col-lg-4 col-md-6 col-sm-6 form-group">
						<label for="role">Country<sup>*</sup></label>
						<select class="form-control applyselect" id="State" name="State">
							<option value="1">Country 1</option>
							<option value="2">Country 2</option>
						</select>

					</div>

				</div>
			</div>

			<!-- Modal footer -->
			<div class="modal-footer">
				<button type="button" class="btn btn-lg actionbtn">Save</button>
			</div>

		</div>
	</div>
</div>



<!-- confirmation Modal popup -->
<input type="hidden" id="hdnIndentId" />
<a id="btnInactivePopup" style="display:none;" href="#" class="btn actionbtn border-r-8" data-toggle="modal" data-target="#deletepopup"><img src="~/assets/images/icons/help/edit-white-icon.png" alt="" class="btn-icon">Inactive</a>
<!-- confirmation Modal popup -->
<div class="modal" id="deletepopup">
	<div class="modal-dialog modal-dialog-centered modal-default">
		<div class="modal-content ">

			<!-- Modal body -->
			<div class="modal-body">
				<div class="warningmsg">
					<img src="~/assets/images/icons/help/warning-icon.svg"
						 class="warningicon">
					<h6 class="text-center">
						<span id="spIndentDocNumber"></span>
					</h6>
					<span class="d-block warning-dec">Are you sure want to Delete this PO?</span>

				</div>
			</div>

			<!-- Modal footer -->
			<div class="modal-footer">
				<button type="button" class="btn btn-lg cancelbtn"
						data-dismiss="modal">
					Cancel
				</button>
				<button type="button" onclick="InactiveAction()"
						class="btn btn-lg actionbtn "
						data-dismiss="modal">
					Yes
				</button>
			</div>

		</div>
	</div>
</div>

