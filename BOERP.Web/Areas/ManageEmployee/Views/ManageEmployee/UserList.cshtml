    <script>

        var ddl_user_type = 0;

        $(document).on("click", ".toggle-password", function () {
            var $icon = $(this);
            var targetField = $icon.attr("data-target");
            var $passwordField = $(targetField);
            var fieldType = $passwordField.attr("type");

            // Image paths
            var showIcon = $icon.attr("data-show");
            var hideIcon = $icon.attr("data-hide");

            if (fieldType === "password") {
                $passwordField.attr("type", "text");
                $icon.attr("src", hideIcon);
            } else {
                $passwordField.attr("type", "password");
                $icon.attr("src", showIcon);
            }
        });
    </script>


