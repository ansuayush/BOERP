                    </div>

                </div>
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" id="email_verify" onclick="isValidEmail()" class="btn btn-lg actionbtn">Verify</button>
            </div>

        </div>
    </div>
</div>



<div class="modal" id="verifyUser" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-dialog-centered modal-md">
