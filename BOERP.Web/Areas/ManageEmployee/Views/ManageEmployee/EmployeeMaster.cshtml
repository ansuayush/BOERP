<div class="modal" id="createuser" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content ">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title text-center w-100" id="emp_header">Add New User</h4>
                <button type="button" class="close" data-dismiss="modal"><img src="~/assets/images/icons/help/close-icon.png" class="closeicon"></button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">

                <div class="row">

                    <div class="col-sm-12">
                        <div class="text-center note-popup">
                            <h2>Create Account</h2>
                            <p>Please fill the following details</p>
                        </div>
                    </div>

                    <div class="col-sm-12 form-group">
                        <div class="profile-cmd profile-sm">
                            <div class="profileimg">
                                <img src="~/assets/images/profileimg/profile-img.png" id="profile_image" alt="">
                            </div>
                            <div class="profileinfo">
                                <input type="file" class="form-control" name="" id="resultImage">
                                <button id="addmoreItem" class="btn btn-lg actionbtn"><img src="~/assets/images/profileimg/camera-icon.svg"> Upload Image</button>
                            </div>
                        </div>

                    </div>

                    <div class="col-sm-6 form-group">
                        <label for="text">First Name<sup>*</sup></label>
                        <input type="text" id="firstname" oninput="onlyAlpha(this);HideErrorMessage(this)" placeholder="Enter First Name" class="form-control Mandatory">
                        <span id="spfirstname" class="text-danger field-validation-error" style="display:none;">Hey, You missed this field!!</span>
                    </div>
                    <div class="col-sm-6 form-group">
                        <label for="text">Last Name<sup>*</sup></label>
                        <input type="text" id="lastname" oninput="onlyAlpha(this); HideErrorMessage(this)" placeholder="Enter Last Name" class="form-control Mandatory">
                        <span id="splastname" class="text-danger field-validation-error" style="display:none;">Hey, You missed this field!!</span>
                    </div>

                    <div class="col-sm-12 form-group">
                        <label for="text">Employee Code<sup>*</sup></label>
                        <input type="text" id="emp_code" placeholder="Enter Employee Code" oninput="HideErrorMessage(this); alphanumeric(this)" class="form-control Mandatory">
                        <span id="spemp_code" class="text-danger field-validation-error" style="display:none;">Hey, You missed this field!!</span>
                    </div>

                    <div class="col-sm-12 form-group">
                        <label for="role">Email<sup>*</sup></label>
                        <input type="text" id="email" placeholder="Enter Email" disabled class="form-control">
                    </div>

                    <div class="col-sm-12 form-group">
                        <label for="">Created Date</label>
                        <input type="text" id="created_at" placeholder="Enter" disabled class="form-control ">
                    </div>


                    <div class="col-sm-12 form-group">
                        <label for="">Phone Number<sup>*</sup></label>
                        <input type="number" id="phone_no" onchange="verifyPhoneNumber()" oninput="HideErrorMessage(this)" placeholder="Enter" class="form-control Mandatory">
                        <span id="spphone_no" class="text-danger field-validation-error" style="display:none;">Invalid Phone No. !!</span>
                    </div>


                    <div class="col-sm-6 form-group ">
                        <label for="role">Department<sup>*</sup></label>
                        <select class="form-control Mandatory applyselect" onchange="HideErrorMessage(this)" id="ddl_department">
                        </select>
                        <span id="spddl_department" class="text-danger field-validation-error" style="display:none;">Hey, You missed this field!!</span>
                    </div>

                    <div class="col-sm-6 form-group ">
                        <label for="role">Reporting Manager</label>
                        <select class="form-control applyselect" id="ddl_manager">
                        </select>
                    </div>
                    <div class="col-sm-12 form-group ">
                        <label for="role">User Type<sup>*</sup></label>
                        <select class="form-control Mandatory applyselect" onchange="HideErrorMessage(this)" id="ddl_UserType">
                        </select>
                        <span id="spddl_UserType" class="text-danger field-validation-error" style="display:none;">Hey, You missed this field!!</span>
                    </div>

                </div>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" id="btn_Save" onclick="SaveEmpCategory()" class="btn btn-lg actionbtn">Save</button>
            </div>

        </div>
    </div>
</div>



