                    <script>
                        $(document).ready(function () {

                            $(function () {
                                $('.datepicker').datepicker({
                                    changeMonth: true,
                                    changeYear: true,
                                    dateFormat: "dd-mm-yy",
                                    yearRange: "-20:+10"
                                });



                            });


                            $("input[name=auditpass]").change(function () {
                                var test = $(this).val();
                                $(".show-hide").hide();

                                $("#" + test).show();

                                if (test == "noaudit") {
                                    $("#validRemark").html('Reason For Rejection<sup class="red-clr">*</sup>');
                                }
                                else {
                                    $("#validRemark").html("Remarks")
                                }
                            });
                        });
                    </script>

                    <script>
                        $(document).ready(function () {
                            $("input[name=reprocess]").change(function () {
                                var test = $(this).val();
                                $(".show-div").hide();
                                if (test == "yesreprocess") {
                                    $("#fromDate").addClass('Mandatory')
                                    $("#toDate").addClass('Mandatory')
                                    $("#dtTaskTime").addClass('Mandatory')
                                    $("#" + test).show();
                                }
                                else {
                                    $("#fromDate").removeClass('Mandatory')
                                    $("#toDate").removeClass('Mandatory')
                                    $("#dtTaskTime").removeClass('Mandatory')
                                    $("#fromDate").val('')
                                    $("#toDate").val('')
                                    $("#dtTaskTime").val('')
                                }
                            });
                        });
                    </script>
