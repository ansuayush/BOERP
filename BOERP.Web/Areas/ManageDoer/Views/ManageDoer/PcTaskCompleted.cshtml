        <div class="row">
            <div class="col-lg-9">
                
                <div class="row">
                    <input type="hidden" id="hdnTask_transID" />
                    <input type="hidden" id="hdnStatus" />

                    <div class="col-md-12 form-group">
                        <div class="card br-none p-0 ">
                            <div class="card-body view-page view-form-group">
                                <div class="row">
                                    <div class="col-lg-2 col-md-3 form-group hw-575">

                                        <label for="Lead Details" class="form-control-label">Task ID</label>
                                        <input type="text" class="form-control" name="" value="101" disabled placeholder="Enter" id="TaskID">

                                    </div>


                                    <div class="col-lg-2 col-md-3 form-group hw-575">

                                        <label for="Lead Details" class="form-control-label">Task Date</label>
                                        <input type="text" class="form-control" name="" value="2023-10-20" disabled placeholder="Enter" id="TaskDate">

                                    </div>
                                    <div class="col-lg-8 col-md-6 form-group hw-575">

                                        <label for="Lead Details" class="form-control-label">Task Name<sup class="red-clr">*</sup></label>
                                        <p id="TaskName">MF-ABC</p>

                                    </div>

                                    <div class="col-lg-2 col-md-3 form-group hw-575">
                                        <div class="form-group">
                                            <label for="Lead Details" class="form-control-label">Frequency<sup class="red-clr">*</sup></label>
                                            <p id="Frequency"></pid="Frequency">
                                        </div>
                                    </div>

                                    <div class="col-lg-2 col-md-3 form-group hw-575">

                                        <label for="Lead Details" class="form-control-label">First Completion Date<sup class="red-clr">*</sup></label>
